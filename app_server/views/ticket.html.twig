{% extends 'base.html.twig' %}

{% set price = 0 %}
{% set mealprice = 0 %}

{% block body %}
    <div class="wrapper-box">
        <div class="row">
            <div class="container">
                <div class="entry-content">
                    <h2 class="entry-title">Tickets</h2>
                    {% if orderComplete %}
                        <h2>{{ orderComplete }}</h2>
                    {% endif %}
                    {% if order %}
                    <div class="col-md-8">
                        {% endif %}
                        <div class="panel panel-default">
                            <div class="panel-heading">Purchase tickets</div>
                            <div class="panel-body">
                                {% if order %}
                                    <form action="/order/insert" method="POST">
                                        <div class="form-group">
                                            <div class="form-group">
                                                <label for="firstname">Firstname</label>
                                                <input type="text" class="form-control" name="firstname" required/>
                                            </div>
                                            <div class="form-group">
                                                <label for="infix">Infix</label>
                                                <input type="text" class="form-control" name="infix"/>
                                            </div>
                                            <div class="form-group">
                                                <label for="lastname">Surname</label>
                                                <input type="text" class="form-control" name="lastname" required/>
                                            </div>
                                            <div class="form-group">
                                                <label for="email">E-mail</label>
                                                <input type="email" class="form-control" name="email" required/>
                                            </div>
                                        </div>
                                        <input type="submit" name="submit" value="Confirm order">
                                    </form>
                                {% else %}
                                    <div class="col-md-6">
                                        <form action="/order/submit" method="POST">
                                            <select name="ticket_type" id="ticket_type" class="form-control">
                                                {% for ticket in tickets %}
                                                    <option value="{{ ticket.id }}"
                                                            data-price="{{ ticket.price }}">{{ ticket.type }}</option>
                                                {% endfor %}
                                            </select>
                                            <input type="number" min="1" max="10" id="amount" name="ticket_amount"
                                                   class="form-control" value="1"/>
                                            <br/>
                                            {% for meal in meals %}
                                                <div class="form-group">
                                                    <label for="{{ meal.type }}">{{ meal.type }}</label>
                                                    <input id="{{ meal.type }}" type="checkbox" name="{{ meal.type }}"
                                                           data-price="{{ meal.price }}"/>
                                                    <input type="number" min="0" max="10" id="{{ meal.type }}_amount"
                                                           name="{{ meal.type }}_amount"
                                                           class="form-control" value="0"/>
                                                </div>
                                            {% endfor %}
                                            <br/>
                                            <input type="submit" name="submit" class="btn btn-success" value="Order"/>
                                        </form>
                                    </div>

                                    <div class="col-md-6">
                                        <h2 class="pull-right">Price: &euro;<span id="price_text">2.50</span></h2>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        {% if order %}
                    </div>
                    <div class="col-md-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">Order</div>
                            <div class="panel-body">
                                {% for ticket in tickets %}
                                    {% set price = price + ticket.price * order.ticket.amount %}
                                    {{ order.ticket.amount }}x {{ ticket.type|title }} - &euro;{{ ticket.price * order.ticket.amount }}
                                    <br/>
                                {% endfor %}
                                {% for meal in meals %}
                                    {% if order.lunch > 0  %}
                                        {% if meal.type == 'lunch' %}
                                            {% set mealprice = mealprice + meal.price * order.lunch %}
                                            {{ order.lunch }}x {{ meal.type }} - &euro; {{ meal.price * order.lunch }}
                                            <br/>
                                        {% endif %}
                                    {% endif %}
                                    {% if order.dinner > 0  %}
                                        {% if meal.type == 'dinner' %}
                                            {% set mealprice = mealprice + meal.price * order.dinner %}
                                            {{ order.dinner }}x {{ meal.type }} - &euro; {{ meal.price * order.dinner }}
                                            <br/>
                                        {% endif %}
                                    {% endif %}
                                {% endfor %}
                            </div>
                            <div class="panel-footer">
                                <strong>Subtotal: &euro;{{ price + mealprice }}</strong>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>

        $('#ticket_type').on('change', function () {
            var self = $(this);
            $('#price_text').html(self.find(':selected').data('price') + '0');
        });
        $('#amount').on('change', function () {
            var self = $(this);
            $('#price_text').html($('#ticket_type').find(':selected').data('price') * self.val());
        });


        {% for meal in meals %}
        var {{ meal.type }}on = false;
        var meal = '#{{ meal.type }}';
        $(meal).on('click', function () {
            var self = $(this);
            var mealamount = '#{{ meal.type }}_amount';
            if ({{ meal.type }}on == false) {
                $(mealamount).val(1);
                {{ meal.type }}on = true;
                $('#price_text').html(parseFloat($('#price_text').text()) + self.data('price') * $(mealamount).val());
            } else {
                {{ meal.type }}on = false;
                $('#price_text').html(parseFloat($('#price_text').text()) - self.data('price') * $(mealamount).val());
                $(mealamount).val(0);
            }
        });

        $('#{{ meal.type }}_amount').on('change', function () {
            var self = $(this);
            {#if (self.val() > 1) {#}
            {#var add = parseFloat($('#price_text').text()) - ($('#ticket_type').find(':selected').data('price') * $('#amount').val()#}
            {#+ $('#{{ meal.type }}').data('price') * (self.val() - 1));#}
            {#} else if (self.val() == 0) {#}
            {#var add = parseFloat($('#price_text').text()) - ($('#ticket_type').find(':selected').data('price') * $('#amount').val()#}
            {#+ $('#{{ meal.type }}').data('price') * (self.val() + 1));#}
            {#}#}
            $('#price_text').html(
                    $('#ticket_type').find(':selected').data('price') * $('#amount').val()
                    + $('#{{ meal.type }}').data('price') * self.val()
            );

            if (self.val() > 0) {
                $('#{{ meal.type }}').attr('checked', 'checked');
            } else if (self.val() == 0) {
                $('#{{ meal.type }}').removeAttr('checked');
            }
        });
        {% endfor %}

    </script>
{% endblock %}