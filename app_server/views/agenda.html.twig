{% extends 'base.html.twig' %}

{% block body %}
    <div class="wrapper-box">
        <div class="row">
            <div class="container">
                <div class="entry-content">
                    <h2 class="entry-title">Agenda</h2>

                    <p>The agenda for the coming event is as follows:</p>
                    {% set date = null %}
                    {% for item in agenda %}
                        {% if date != item.start_time|date("d") %}
                            {% set date = item.start_time|date("d") %}
                            <h3>{{ item.start_time|date("l") }}</h3>
                        {% endif %}
                    <div class="logo-partner-box">
                        <h4>{{ item.subject }}</h4>
                        <div class="logo-partner-small col-sm-2">
                        </div>
                        <div class="col-sm-10">
                            <p class="p1">
                                {{ item.sub_desc }}
                            </p>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}