<html lang="en">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <!-- Meta, title, CSS, favicons, etc. -->
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>ICT4D Backend | </title>

        <!-- Bootstrap -->
        <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css"/>
        <!-- Font Awesome -->
        <link href="/css/font-awesome.min.css" rel="stylesheet">
        <!-- Animate.css -->
        <link href="/css/backend/animate.min.css" rel="stylesheet">

        <!-- Custom Theme Style -->
        <link href="/css/backend/custom.min.css" rel="stylesheet">
        <style type="text/css"></style>
    </head>

    <body class="login">
        <div>
            <a class="hiddenanchor" id="signup"></a>
            <a class="hiddenanchor" id="signin"></a>

            <div class="login_wrapper">
                <div class="animate form login_form">
                    <section class="login_content">
                        <form action="/backend/user/login" method="post">
                            <h1>Backend login</h1>

                            <div>
                                <input class="form-control " placeholder="E-mailadres"
                                       type="email" id="email"
                                       pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$"
                                       title="voorbeeld@mail.nl"
                                       name="email" required="required"/>
                            </div>
                            <div>
                                <input class="form-control " placeholder="Wachtwoord"
                                       type="password" id="password"
                                       name="password" required="required"/>
                            </div>
                            <div>
                                <button type="submit" class="btn btn-default submit">Inloggen</button>
                            </div>

                            <div class="clearfix"></div>

                            <div class="separator">

                                <div class="clearfix"></div>
                                <br>

                                <div>
                                    <h1><i class="fa fa-cloud"></i> ICT4D Backend</h1>

                                    <p>&copy;2016 All Rights Reserved. ICT4D. Privacy and Terms</p>
                                </div>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </body>
</html>