                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="x_panel">
                                        <div class="x_title">
                                            <h2>Requests
                                                <small>Requested spots</small>
                                            </h2>
                                            <ul class="nav navbar-right panel_toolbox">
                                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                                </li>
                                                <li class="dropdown">
                                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"
                                                       role="button"
                                                       aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                                    <ul class="dropdown-menu" role="menu">
                                                        <li><a href="#">Settings 1</a>
                                                        </li>
                                                        <li><a href="#">Settings 2</a>
                                                        </li>
                                                    </ul>
                                                </li>
                                                <li><a class="close-link"><i class="fa fa-close"></i></a>
                                                </li>
                                            </ul>
                                            <div class="clearfix"></div>
                                        </div>
                                        <div class="x_content">

                                            <table class="table table-hover">
                                                <thead>
                                                    <tr>
                                                        <th>Speaker</th>
                                                        <th>Subject</th>
                                                        <th width="250">Description</th>
                                                        <th>Extra wishes</th>
                                                        <th>First choice</th>
                                                        <th>Second choice</th>
                                                        <th>Third choice</th>
                                                        <th width="150">Assign</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {% for request in requests %}
                                                        <form action="/backend/assignSpot" method="POST">
                                                            <tr>
                                                                <td>{{ request.firstname }} {% if request.infix %}{{ request.infix }}{% endif %}{{ request.lastname }}</td>
                                                                <td>{{ request.subject }}</td>
                                                                <td width="250">{{ request.sub_desc }}</td>
                                                                <td>{{ request.extra_wishes }}</td>
                                                                <td>{{ request.s1_st|date('l jS H:i') }}
                                                                    - {{ request.s1_et|date('H:i') }} at
                                                                    the {{ request.h1_name|title }}</td>
                                                                <td>{{ request.s2_st|date('l jS H:i') }}
                                                                    - {{ request.s2_et|date('H:i') }} at
                                                                    the {{ request.h2_name|title }}</td>
                                                                <td>{{ request.s3_st|date('l jS H:i') }}
                                                                    - {{ request.s3_et|date('H:i') }} at
                                                                    the {{ request.h3_name|title }}</td>
                                                                <td width="150">
                                                                    <select name="assign_choice" id="assign_choice" class="form-control">
                                                                        <option value=""></option>
                                                                        <option value="{{ request.s1_id }}">First choice
                                                                        </option>
                                                                        <option value="{{ request.s2_id }}">Second
                                                                            choice
                                                                        </option>
                                                                        <option value="{{ request.s3_id }}">Third choice
                                                                        </option>
                                                                    </select><br />
                                                                    <input type="hidden" name="request_id" value="{{ request.request_id }}" />
                                                                    <input type="hidden" name="speaker" value="{{ request.speaker_id }}" />
                                                                    <input type="hidden" name="email" value="{{ request.email }}" />
                                                                    <input type="hidden" name="firstname" value="{{ request.firstname }}">
                                                                    <input type="hidden" name="subject" value="{{ request.subject }}" />
                                                                    <input type="hidden" name="sub_desc" value="{{ request.sub_desc }}" />
                                                                    <input type="hidden" name="extra_wishes" value="{{ request.extra_wishes }}" />
                                                                    <input type="submit" class="btn btn-success" name="submit" value="Assign" />
                                                                </td>
                                                            </tr>
                                                        </form>
                                                    {% else %}
                                                        <tr>
                                                            <td><h4>Geen items...</h4></td>
                                                        </tr>
                                                    {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="x_panel">
                                        <div class="x_title">
                                            <h2>Budget requests
                                                <small>Speakers that want extra budget</small>
                                            </h2>
                                            <ul class="nav navbar-right panel_toolbox">
                                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                                </li>
                                                <li class="dropdown">
                                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"
                                                       role="button"
                                                       aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                                    <ul class="dropdown-menu" role="menu">
                                                        <li><a href="#">Settings 1</a>
                                                        </li>
                                                        <li><a href="#">Settings 2</a>
                                                        </li>
                                                    </ul>
                                                </li>
                                                <li><a class="close-link"><i class="fa fa-close"></i></a>
                                                </li>
                                            </ul>
                                            <div class="clearfix"></div>
                                        </div>
                                        <div class="x_content">
                                            <table class="table table-hover">
                                                <thead>
                                                    <tr>
                                                        <th>Speaker</th>
                                                        <th>Reason</th>
                                                        <th>Requested amount</th>
                                                        <th>Request date</th>
                                                        <th width="150">Accept / Reject</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {% for request in budget_requests %}
                                                        <form action="/backend/assignbudget" method="POST">
                                                            <tr>
                                                                <td>{{ request.firstname }} {% if request.infix %}{{ request.infix }}{% endif %}{{ request.lastname }}</td>
                                                                <td>{{ request.reason }}</td>
                                                                <td>&euro;{{ request.requested_budget }}</td>
                                                                <td>{{ request.date|date('l jS H:i') }}</td>
                                                                <td width="150">
                                                                    <select name="decision" id="decision" class="form-control">
                                                                        <option value="0" selected>Accept</option>
                                                                        <option value="1">Reject</option>
                                                                    </select>
                                                                    <br/>
                                                                    <div id="counteramount" class="form-group" style="display: none">
                                                                        <label for="sub_desc">Counter amount &euro;</label>
                                                                        <input type="number" class="form-control" name="counteramount" value="0"/>
                                                                    </div>
                                                                    <input type="hidden" name="budget" value="{{ request.requested_budget }}"   />
                                                                    <input type="hidden" name="speaker_id" value="{{ request.speaker_id }}"     />
                                                                    <input type="hidden" name="request_id" value="{{ request.request_id }}"     />
                                                                    <input type="hidden" name="firstname" value="{{ request.firstname }}"       />
                                                                    <input type="hidden" name="email" value="{{ request.email }}"               />
                                                                    <input type="submit" class="btn btn-success" name="submit" value="Submit"   />
                                                                </td>
                                                            </tr>
                                                        </form>
                                                    {% else %}
                                                        <tr>
                                                            <td><h4>Geen items...</h4></td>
                                                        </tr>
                                                    {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-3">
                                    <div class="x_panel">
                                        <div class="x_title">
                                            <h2>Accepted requests
                                                <small>All the already accepted requests</small>
                                            </h2>
                                            <ul class="nav navbar-right panel_toolbox">
                                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                                </li>
                                                <li class="dropdown">
                                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"
                                                       role="button"
                                                       aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                                    <ul class="dropdown-menu" role="menu">
                                                        <li><a href="#">Settings 1</a>
                                                        </li>
                                                        <li><a href="#">Settings 2</a>
                                                        </li>
                                                    </ul>
                                                </li>
                                                <li><a class="close-link"><i class="fa fa-close"></i></a>
                                                </li>
                                            </ul>
                                            <div class="clearfix"></div>
                                        </div>
                                        <div class="x_content">
                                            <table class="table table-hover">
                                                <thead>
                                                    <tr>
                                                        <th>Speaker</th>
                                                        <th>Reason</th>
                                                        <th>Requested amount</th>
                                                        <th>Request date</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {% for item in accepted %}
                                                        <tr>
                                                            <td>{{ item.firstname }} {% if item.infix %}{{ item.infix }}{% endif %}{{ item.lastname }}</td>
                                                            <td>{{ item.reason }}</td>
                                                            <td>&euro;{{ item.requested_budget }}</td>
                                                            <td>{{ item.date|date('l jS H:i') }}</td>
                                                        </tr>
                                                    {% else %}
                                                        <tr>
                                                            <td><h4>Geen items...</h4></td>
                                                        </tr>
                                                    {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-3">
                                    <div class="x_panel">
                                        <div class="x_title">
                                            <h2>Remaining budget
                                                <small>Amount of budget left over</small>
                                            </h2>
                                            <ul class="nav navbar-right panel_toolbox">
                                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                                </li>
                                                <li class="dropdown">
                                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"
                                                       role="button"
                                                       aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                                    <ul class="dropdown-menu" role="menu">
                                                        <li><a href="#">Settings 1</a>
                                                        </li>
                                                        <li><a href="#">Settings 2</a>
                                                        </li>
                                                    </ul>
                                                </li>
                                                <li><a class="close-link"><i class="fa fa-close"></i></a>
                                                </li>
                                            </ul>
                                            <div class="clearfix"></div>
                                        </div>
                                        <div class="x_content">
                                            <h1>&euro; {{ budget }} / 25000</h1>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /page content -->
            </div>
        </div>


        <!-- jQuery -->
        <script src="jquery/dist/jquery.min.js"></script>
        <!-- Bootstrap -->
        <script src="js/bootstrap.min.js"></script>
        <!-- iCheck -->
        <script src="iCheck/icheck.min.js"></script>
